<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp">

    <EditText
        android:id="@+id/edit_text_location"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="@string/set_location"
        android:inputType="textEmailAddress"
        android:autofillHints="AUTOFILL_HINT_POSTAL_ADDRESS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_button_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <ImageButton
        android:id="@+id/image_button_location"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_my_location_24dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_text_location"
        app:layout_constraintTop_toTopOf="@id/edit_text_location" />

</androidx.constraintlayout.widget.ConstraintLayout>